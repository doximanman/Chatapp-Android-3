<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="logo" parent="TextAppearance.AppCompat">
        <item name="android:src">@drawable/logo</item>
    </style>

    <style name="title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/green5</item>
        <item name="android:fontFamily">@font/baloo_bhaijaan</item>
    </style>

    <style name="background" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/dark_background</item>
    </style>

    <style name="inputs_fields" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/silver</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textColorHint">@color/silver</item>
    </style>

    <style name="layout_inputs" parent="TextAppearance.AppCompat">
        <item name="android:background">@color/light_dark_blue</item>
        <item name="android:alpha">0.8</item>
    </style>

    <style name="btn" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/silver</item>
        <item name="android:fontFamily">@font/baloo_bhaijaan</item>
        <item name="android:backgroundTint">@color/green6</item>
    </style>

    <style name="not_registered" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/green5</item>
        <item name="android:fontFamily">@font/baloo_bhaijaan</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="dialog_title">
        <item name="android:textColor">@color/green5</item>
        <item name="android:fontFamily">@font/baloo_bhaijaan</item>
    </style>

    <style name="dialog_background">
        <item name="android:background">@color/light_dark_blue</item>
    </style>

    <style name="chat_preview_details">
        <item name="android:textColor">@color/silver</item>
    </style>

    <style name="dialog_input" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:textColor">@color/silver</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textColorHint">@color/silver</item>
        <item name="colorControlNormal">@color/green5</item>
        <item name="trackTint">@color/green5</item>
    </style>

    <style name="messages" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="logout_btn" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/silver</item>
        <item name="android:fontFamily">@font/baloo_bhaijaan</item>
        <item name="android:backgroundTint">@color/dark_error</item>
    </style>

    <style name="add_message_input" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/silver</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textColorHint">@color/silver</item>
    </style>

    <style name="arrow">
        <item name="android:foregroundTint">@color/lighter_dark_blue</item>
        <item name="android:background">#00FFFFFF</item>
    </style>

    <style name="chat_preview_background">
        <item name="android:background">@color/dark_gray</item>
    </style>

    <style name="my_username" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/green6</item>
        <item name="android:fontFamily">@font/baloo_bhaijaan</item>
    </style>

    <style name="chat_preview_name">
        <item name="android:textColor">@color/green6</item>
    </style>

    <style name="Base.Theme.Chatapp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/green6</item>
        <item name="colorPrimaryVariant">@color/light_dark_blue</item>
        <item name="colorOnSurface">@color/green4</item>
    </style>

    <style name="Theme.Chatapp" parent="Base.Theme.Chatapp" />
</resources>