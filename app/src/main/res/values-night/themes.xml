<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="logo" parent="TextAppearance.AppCompat">
        <item name="android:src">@drawable/dark_logo</item>
    </style>
    <style name="title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/pink</item>
        <item name="android:fontFamily">@font/baloo_bhaijaan</item>
    </style>
    <style name="background" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/dark_background</item>
    </style>
    <style name="inputs_fields" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>
    <style name="layout_inputs" parent="TextAppearance.AppCompat">
        <item name="android:background">@color/light_pink</item>
        <item name="android:alpha">0.8</item>
    </style>
    <style name="btn" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/baloo_bhaijaan</item>
        <item name="android:backgroundTint">@color/pink</item>
    </style>

    <style name="dialog_title">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:fontFamily">@font/baloo_bhaijaan</item>
    </style>
    <style name="dialog_background">
        <item name="android:background">@color/more_light_pink</item>
    </style>
    <style name="dialog_input" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textColorHint">@color/lighter_dark_blue</item>
    </style>
    <style name="Base.Theme.Chatapp" parent="Theme.Material3.DayNight.NoActionBar">

    </style>
    <style name="Theme.Chatapp" parent="Base.Theme.Chatapp" />
</resources>