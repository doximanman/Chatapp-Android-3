<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="logo" parent="TextAppearance.AppCompat">
        <item name="android:src">@drawable/logo</item>
    </style>
    <style name="title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/green2</item>
        <item name="android:fontFamily">@font/baloo_bhaijaan</item>
    </style>
    <style name="background" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/light_background</item>
    </style>
    <style name="inputs_fields" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>
    <style name="layout_inputs" parent="TextAppearance.AppCompat">
        <item name="android:background">@color/white</item>
        <item name="android:alpha">0.6</item>
    </style>
    <style name="btn" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/baloo_bhaijaan</item>
        <item name="android:backgroundTint">@color/green2</item>
    </style>
    <style name="not_registered" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/green2</item>
        <item name="android:fontFamily">@font/baloo_bhaijaan</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>
    <style name="dialog_title">
        <item name="android:textColor">@color/green2</item>
        <item name="android:fontFamily">@font/baloo_bhaijaan</item>
    </style>
    <style name="dialog_background">
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="dialog_input" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/green2</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textColorHint">@color/green4</item>
        <item name="colorControlNormal">@color/green2</item>
        <item name="trackTint">@color/green3</item>
    </style>
    <style name="Base.Theme.Chatapp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/green2</item>
        <item name="colorPrimaryVariant">@color/light_dark_blue</item>
        <item name="colorOnPrimary">@color/green2</item>
    </style>
    <style name="Theme.Chatapp" parent="Base.Theme.Chatapp" />
</resources>